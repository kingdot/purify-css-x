{
  "manifest_version": 2,
  "name": "demo",
  "version": "1.0.0",
  "description": "一款基于动态分析的css精简工具，覆盖html和js",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "css精简工具",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/initial-script.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/css-generate.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "js/inject.js"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}